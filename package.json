{
  "name": "hopaverkefni1",
  "version": "1.0.0",
  "description": "Verkefnið felst í því að smíða vef eftir forskrift.",
  "main": "index.js",
  "scripts": {
    "browser-sync": "browser-sync start --server --files index.html styles.css",
    "sass": "node-sass --source-map-embed styles.scss styles.css",
    "sass-watch": "node-sass --source-map-embed --watch *.scss --recursive styles.css",
    "dev": "npm-run-all --parallel sass sass-watch browser-sync",
    "lint-css": "stylelint styles.css --syntax css",
    "lint-scss": "stylelint styles.scss --syntax scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helgirh/hopaverkefni1.git"
  },
  "author": "helgirh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/helgirh/hopaverkefni1/issues"
  },
  "homepage": "https://github.com/helgirh/hopaverkefni1#readme",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.6.0",
    "stylelint-config-primer": "^2.2.11"
  },
  "dependencies": {}
}
